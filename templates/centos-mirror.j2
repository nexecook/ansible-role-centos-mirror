#!/bin/bash
# http://www.centos.org/modules/tinycontent/index.php?id=22

SOURCE='{{ centos_mirror_source }}'
DESTINATION='{{ mirror_doc_root }}/CentOS/'

LOCKFILE=/tmp/$(basename ${DESTINATION}).lock

if [[ ! -e $LOCKFILE ]]; then
    touch $LOCKFILE
    timeout 1d rsync -avHkill the rsync process after 24 hours    \
          --delete           \
          --delete-after     \
          --delay-updates    \
          --exclude '.~tmp~' \
          --human-readable   \
          --progress         \
          --stats            \
          --safe-links       \
          --itemize-changes  \
          --timeout=10800    \
          ${SOURCE} ${DESTINATION}

    if [[ $? -eq 0 ]]; then
        echo `date +%s` > {{ mirror_timestamp_dir }}/centos
    fi

    rm $LOCKFILE
else
    cat <<EOF 1>&2
ERROR: Another rsync is already running and has the lock file
$LOCKFILE.
EOF

fi
